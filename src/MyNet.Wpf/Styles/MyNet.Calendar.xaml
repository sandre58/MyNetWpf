    </Style>
    <Style x:Key="MyNet.Styles.CalendarAppointment.Alternate.DaysByMonth.Accent" TargetType="{x:Type ctrl:CalendarAppointment}" BasedOn="{StaticResource MyNet.Styles.CalendarAppointment.Alternate.DaysByMonth}">
