                                <LinearDoubleKeyFrame KeyTime="0:0:1.500" Value="1" />
                            </DoubleAnimationUsingKeyFrames>

                            <DoubleAnimation Storyboard.TargetName="PART_Ellipse"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             From="1"
                                             To="0"
                                             Duration="0:0:1.500" />
