                                                     SelectionMode="{Binding SelectedValue, ElementName=SelectionMode, Mode=OneWay}"
                                                     ShowHeader="{Binding IsChecked, ElementName=showHeader, Mode=OneWay}" />
                        </smtx:XamlDisplay>

